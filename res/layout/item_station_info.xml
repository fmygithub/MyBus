<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@+drawable/list_item_bg_color" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80.0dip"
        android:layout_centerVertical="true"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/station_info_route_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="20.0dip"
            android:text="咚咚咚"
            android:textColor="@+color/black"
            android:textSize="20.0dip" />

        <LinearLayout
            android:id="@+id/top_layout_line_item"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/station_info_route_name"
            android:layout_marginLeft="10.0dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@+color/hui" />

            <TextView
                android:id="@+id/piaojia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@+color/hui" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10.0dip"
        android:background="@+drawable/line_item_right_image" />

</RelativeLayout>