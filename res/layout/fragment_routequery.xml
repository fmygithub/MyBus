<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@+color/bai"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_bus"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40.0dip"
        android:layout_marginRight="40.0dip"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:layout_marginTop="20.0dip"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_exchange"
                android:layout_width="50.0dip"
                android:layout_height="100.0dip"
                android:layout_gravity="center_vertical"
                android:background="@+drawable/exchange_btn_sty"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10.0dip"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/begin_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10.0dip"
                    android:background="@+drawable/edit_bg"
                    android:drawableLeft="@+drawable/qd_image"
                    android:gravity="center_vertical"
                    android:hint="请输入起点"
                    android:textSize="18.0dip" />

                <EditText
                    android:id="@+id/end_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:background="@+drawable/edit_bg"
                    android:drawableLeft="@+drawable/zd_image"
                    android:gravity="center_vertical"
                    android:hint="请输入终点"
                    android:textSize="18.0dip" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_query"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@+drawable/query_btn_sty"
            android:orientation="vertical"
            android:text="查询方案"
            android:textColor="@+color/bai"
            android:textSize="20.0dip" />
    </LinearLayout>
	
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <Button
            android:id="@+id/metro_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="112dp"
            android:background="@+drawable/metro_btn_sty" />

    </RelativeLayout>
    
    <TextView
        android:id="@+id/lately_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lately_layout"
        android:layout_marginLeft="10.0dip"
        android:textColor="@+color/black"
        android:textSize="20.0dip" />

    <RelativeLayout
        android:id="@+id/lately_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3.0dip"
        android:layout_marginLeft="0.5dip"
        android:layout_marginRight="0.5dip"
        android:background="@+drawable/list_zi_item_bg_color" >

        <ImageView
            android:id="@+id/lately_left_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10.0dip"
            android:src="@+drawable/history_image" />

        <TextView
            android:id="@+id/lately_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:layout_toLeftOf="@+id/right_image"
            android:layout_toRightOf="@+id/lately_left_image"
            android:textColor="@+color/hui"
            android:textSize="15.0dip" />

        <ImageView
            android:id="@+id/right_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10.0dip"
            android:src="@+drawable/line_item_right_image" />
    </RelativeLayout>

</RelativeLayout>